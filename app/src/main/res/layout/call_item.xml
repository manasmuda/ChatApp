<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/call_image"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/call_name"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="7dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/call_image"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="MANAS"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/call_type_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="7dp"
        android:layout_below="@id/call_name"
        android:layout_toRightOf="@id/call_image"
        android:src="@drawable/ic_call_received_blue_24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/call_date"
        android:textSize="16dp"
        android:text="July 21, 17:50"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/call_name"
        android:layout_toRightOf="@id/call_type_image"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="18dp"
        android:src="@drawable/ic_phone_blue_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/call_image"
        android:background="#000000"></LinearLayout>

</RelativeLayout>